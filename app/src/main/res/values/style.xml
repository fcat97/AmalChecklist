<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTeal</item>
        <item name="colorPrimaryDark">@color/colorTealDark</item>
        <item name="colorAccent">@color/colorBlueAccent</item>
        <item name="colorControlNormal">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">?attr/colorPrimary</item>
    </style>
    <style name="AppTheme.ToolbarOverlay" parent="AppTheme.AppBarOverlay">
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:colorControlNormal">@color/colorGreen</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="fontFamily">@font/josefin_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="textRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/josefin_regular</item>
    </style>

    <style name="textRegularOliciy">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/oliciy</item>
    </style>


    <style name="textRegular.bold" parent="textRegular">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/josefin_bold</item>
    </style>

    <style name="textRegular.italic" parent="textRegular">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/josefin_light_italic</item>
    </style>

    <style name="textSmall" parent="textRegular">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="textSmall.Italic" parent="textRegular.italic">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textMedium" parent="textRegular">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textLarge">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/josefin_regular</item>
        <item name="background">@android:color/transparent</item>
    </style>
    <style name="textLarge.Bold">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/josefin_bold</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="textMini" parent="textRegular">
        <item name="android:textSize">10sp</item>
    </style>

</resources>